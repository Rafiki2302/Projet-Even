<div class="col-lg-12 text-center">
{{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.datedebut) }}
    {{ form_row(form.datecloture) }}
    {{ form_row(form.nbinscriptionsmax) }}
    {{ form_row(form.duree) }}
    {{ form_row(form.descriptioninfos) }}
    <p>Ville organisatrice : {{ app.user.site.nom }}</p>
    {{ form_row(form.lieu) }}
    <a href="{{ path('lieu_new') }}">Cr√©er un nouveau lieu de sortie</a>
    <div>
        <button class="btn btn-primary d-inline" name="enregistrer">{{ button_label|default('Enregistrer') }}</button>
        <button class="btn btn-success d-inline" name="publier">{{ button_label|default('Publier la sortie') }}</button>
        {{ form_end(form) }}
        {% if app.request.attributes.get('_route') is same as('sortie_edit') %}
            <form method="post" class="d-inline" action="{{ path('sortie_delete', {'id': sortie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">
                <button class="btn btn-danger">Supprimer la sortie</button>
            </form>
        {% endif %}
        <a href="{{ path('sortie_index') }}" class="btn btn-secondary d-inline">Annuler</a>
    </div>

</div>

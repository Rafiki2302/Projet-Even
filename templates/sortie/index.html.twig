{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}

    <div class="str-main-container">
        <h1>Sortie index</h1>
        <h2>Filtrer les sorties</h2>
        <div class="str-form">
            <div class="str-form-align-content-right">
                {{ form(form) }}
                {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.site) }}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.sortiesOrga) }}
                    {{ form_row(form.sortiesInsc) }}
                    {{ form_row(form.sortiesPasInsc) }}
                    {{ form_row(form.sortiesPass) }}
                    {{ form_row(form.date1) }}
                    {{ form_row(form.date2) }}
                    {{ form_row(form.nom) }}


                    {{ form_row(form.rechercher, { 'label': 'Rechercher' }) }}
                {{ form_end(form) }}
            </div>
        </div>


        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Duree(min)</th>
                    <th>Inscription av le</th>
                    <th>Nombre de participants</th>
                    <th>Description</th>
                    <th>Organisateur</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}


                <tr>
                    {# {% if sortie.etat.id == 1 and app.user is not sortie.organisateur  %}#}
                    {#{% else %}#}
                        <td>{{ sortie.nom }}</td>
                        <td>{{ sortie.datedebut ? sortie.datedebut|date('d/m/Y H:i:s') : '' }}</td>
                        <td>{{ sortie.duree }}</td>
                        <td>{{ sortie.datecloture ? sortie.datecloture|date('d/m/Y H:i:s') : '' }}</td>
                        <td>{{ sortie.participants.count}}/{{ sortie.nbinscriptionsmax }}</td>
                        <td>{{ sortie.descriptioninfos }}</td>
                        <td><a href="{{ path('participant_show', {'id': sortie.organisateur.id}) }}">
                            {{ sortie.organisateur.getNom() }}</a></td>
                        <td>{{ sortie.etat.libelle }}</td>
                        <td>{% if app.user in sortie.participants %} x</td>
                        {% endif %}
                        <td>
                            <a href="{{ path('sortie_show', {'id': sortie.id}) }}">afficher</a>
                            {% if app.user == sortie.organisateur %}
                            <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">modifier</a>
                            {% endif %}
                            {% if app.user != sortie.organisateur %}
                                {% if app.user in sortie.participants %}
                            <a href="{{ path('sortie_insc', {'id': sortie.id}) }}">se d√©sinscrire</a>
                                {% else %}
                            <a href="{{ path('sortie_insc', {'id': sortie.id}) }}">s'inscrire</a>
                                {% endif %}
                            {% endif %}

                        </td>
                   {# {% endif %}#}
                </tr>

            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('sortie_new') }}">Create new</a>
    </div>
{% endblock %}

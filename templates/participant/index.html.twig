{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}

    <div class="str-main-container">
        <h1>Participant index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Pseudo</th>
                    <th>Telephone</th>
                    <th>Mail</th>
                    <th>Admin</th>
                    <th>Actif</th>
                    <th>UrlImg</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td>{{ participant.id }}</td>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.pseudo }}</td>
                    <td>{{ participant.telephone }}</td>
                    <td>{{ participant.mail }}</td>
                    <td>{{ participant.admin ? 'Yes' : 'No' }}</td>
                    <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                    <td>{{ participant.media.urlImg }}</td>
                    <td>
                        <a href="{{ path('participant_show', {'id': participant.id}) }}" title="voir"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('participant_edit', {'id': participant.id}) }}" title="modifier"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="str-button-link str-button-align-right">
            <a href="{{ path('participant_new') }}"><i class="fa fa-plus"></i> Cr√©er nouveau Participant</a>
        </div>

    </div>
{% endblock %}
